<%# Form_for automatically generates your authenticity token for you %>
<h1>New Task</h1>

<%# SIMPLE FORMS METHOD %>
<%= form_for @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.submit %>
<% end %>

