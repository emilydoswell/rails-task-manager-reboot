<h1>Edit Task</h1>

<%# SIMPLE FORMS METHOD %>
<%= form_for @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.check_box :completed %>
  <%= f.label :completed, "Completed" %>
  <%= f.submit %>
<% end %>

<%# NORMAL METHOD %>
<form action="/tasks" method="post">
  <%= hidden_field_tag :Authenticity_token, form_authenticity_token %>
  <label for="title">Title</label>
  <%# You want the information to be filled in when you're editing a task - this is what value is for %>
  <input type="text" name="task[title]" value="Make Bed">
  <label for="details">Details</label>
  <input type="text" name ="task[details]" value="Put the sheets on">
   <label for=""></label>
  <input type="text">
  <input type="submit">
</form>